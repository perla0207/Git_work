pipeline{
	agent any
	environment{
	  PATH = "${PATH}:${tool name: 'maven3', type: 'maven'}/bin"
	}
	
	stages{
		stage('SCM Checkout'){
			steps{
				git credentialsId: 'github', 
					url: 'https://github.com/perla0207/Git_work.git', 
					branch: 'master'
			}
		}
		
		stage('Maven Build'){
			steps{
				sh "mvn clean package"
			}
		}
	}
}
